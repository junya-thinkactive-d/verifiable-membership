{
  "linter": {
    "enabled": true,
    "ignore": [
      ".yarn/**",
      "**/.gitignore",
      "**/.next/**"
    ],
    "rules": {}
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      ".yarn/**",
      "**/.gitignore",
      "**/.next/**"
    ],
    "indentStyle": "space",
    "indentSize": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingComma": "all"
    }
  }
}
